<div class="page-width">
  <div class="not-found-container" style="text-align: center; padding: var(--spacing-extra-loose) 0;">
    <div class="not-found-icon" style="font-size: 120px; color: var(--color-text-light); margin-bottom: var(--spacing-loose);">404</div>
    <h1 style="font-size: 32px; margin-bottom: var(--spacing-base);">{{ 'general.404.title' | t }}</h1>
    <p class="not-found-text" style="color: var(--color-text-light); margin-bottom: var(--spacing-loose); font-size: 18px;">
      {{ 'general.404.subtext_html' | t }}
    </p>
    <div class="not-found-actions">
      <a href="/" class="button button--primary" style="margin-right: var(--spacing-base);">{{ 'general.404.home' | t }}</a>
      <a href="/collections/all" class="button button--secondary">{{ 'general.404.shop' | t }}</a>
    </div>
  </div>
</div>